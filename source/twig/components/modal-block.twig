        <div class="modal-block__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
                <path d="M23.3333 7L10.5 19.8333L4.66663 14" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
        <div class="modal-block__desc">
            <h4 class="modal-block__title">{{ item.title }}</h4>
            <div class="modal-block__text">{{ item.text }}</div>
        </div>
    </div>
{% endfor %}
