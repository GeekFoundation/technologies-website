                    </svg>
                </div>
                <div class="feedback__form-name">{{ feedback.formName }}</div>
                <div class="feedback__form-text">{{ feedback.formText }}</div>
                <form action="#" class="feedback__form">
                    <div class="form-grid">
                        <div class="form-grid__item">
                            <div class="form-grid__input">
                                <input name="name" id="name" type="text" class="input-style" placeholder="{{ feedback.fieldName }}" required="">
                            </div>
                        </div>
                        <div class="form-grid__item">
                            <div class="form-grid__input">
                                <input name="email" id="email" type="email" class="input-style" placeholder="{{ feedback.fieldEmail }}" required="">
                            </div>
                        </div>
                        <div class="form-grid__item form-grid__item--line">
                                <label class="checkbox-style">
                                    <input type="checkbox" name="rules" value="1" aria-invalid="false">
                                    <span class="checkbox-style__wrapper wpcf7-list-item-label"><span>{{ feedback.rules }}</span>
                                </span>
                                </label>
                            <button class="b-btn b-btn--primary" type="submit"><span>{{ feedback.btn }}</span></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
