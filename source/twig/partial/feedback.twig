<section class="feedback section" id="contact">
    <div class="wrapper">
        <div class="feedback__part">
            <div class="feedback__desc">
                <div class="section__name">{{ feedback.section }}</div>
                <h2 class="section__title">{{ feedback.title }}</h2>
                <div class="feedback__text">{{ feedback.text }}</div>
                <div class="feedback__data">
                    <a href="tel:{{ feedback.phoneLink }}" class="feedback__link">{{ feedback.phone }}</a>
                    <a href="mailto:{{ feedback.mail }}" class="feedback__link">{{ feedback.mail }}</a>
                </div>
            </div>
            <div class="feedback__block-form" data-scroll-animate='{"opacity": 0, "y": 50, "duration": 1}'>
                <div class="feedback__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
